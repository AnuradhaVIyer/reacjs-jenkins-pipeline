pipeline {
    agent any
environment {
    CI = 'true'
    HOME = '.'
    npm_config_cache = 'npm-cache'
  }
  stages {
    stage('Install Packages') {
      steps {
	echo 'Install Packages..'
        bat 'npm install'
      }
    }
    stage('Test and Build') {
      parallel {
        stage('Run Tests') {
          steps {
	    echo 'Running Tests..'
            bat 'npm test -- a --watchAll=false --testMatch "**/src/**/*.test.js'
          }
        }
        stage('Create Build Artifacts') {
          steps {
	    echo 'Building Artifacts..'
            bat 'npm run build'
          }
        }
      }
    }
    stage('Deploy') {
       steps {
         echo 'Deploying....'
	 bat 'serve -s build' 
       }
    }
    }
}
